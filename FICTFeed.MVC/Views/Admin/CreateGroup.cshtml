@model FICTFeed.MVC.Models.PageViews.Groups.CreateGroupPageView

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>RegisterUser</h2>


@using (Html.BeginForm("CreateGroup", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Создать группу</h4>
        <hr />
        @Html.ValidationSummary(true)

        @Html.EditorFor(m => m.NewGroup.Name)

        @Html.EditorFor(m => m.NewGroup.GroupShedule)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
