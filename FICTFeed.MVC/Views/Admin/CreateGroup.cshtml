@model FICTFeed.MVC.Models.PageViews.Groups.CreateGroupPageView

@{
    ViewBag.Title = Html.ResourceString("CreateGroup");
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@Html.ResourceString("CreateGroup")</h2>

@using (Html.BeginForm("CreateGroup", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ResourceLabelFor(m => m.NewGroup.Name)
                @Html.EditorFor(m => m.NewGroup.Name)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ResourceLabelFor(m => m.NewGroup.GroupShedule)
                @Html.EditorFor(m => m.NewGroup.GroupShedule)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Html.ResourceString("CreateGroup")" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
