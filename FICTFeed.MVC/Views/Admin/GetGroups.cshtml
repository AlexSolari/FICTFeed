@model FICTFeed.MVC.Models.PageViews.Groups.EditGroupsPageView
@{
    ViewBag.Title = "GetGroups";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Группы</h2>

@if (Model != null)
{
    foreach (var item in Model.Groups)
    {
        <div class="custom-card small z-depth-2">
            <div class="card-content">
                <span class="card-title grey-text">@Html.DisplayFor(m => item.Name)</span>
                <p>
                    <div class="default-input-width">
                        @using (Html.BeginForm("EditGroupName", "Admin"))
                        {
                            @Html.HiddenFor(m => item.Id)
                            @Html.EditorFor(m => item.Name)
                            <div class="card-action">
                                <button type="submit" class="btn-flat grey-text">Save</button>
                            </div>
                        }
                    </div>
                </p>
            </div>
        </div>
    }
    <a href="@Url.RouteUrl("CreateGroup")">
        <div id="add-news" class="btn red">Add group</div>
    </a>
}