@{
    ViewBag.Title = @Html.ResourceString("ForgotPasswordPage");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.ResourceString("ForgotPasswordPage")</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ResourceString("Mail")
            <input type="email" name="mail"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@Html.ResourceString("SendPass2Mail")" class="btn btn-default" />
        </div>
    </div>
}

