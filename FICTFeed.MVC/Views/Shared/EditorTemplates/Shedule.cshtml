@model FICTFeed.Framework.Shedule.Schedule
<table>
    <tr>
        <td>
            @Html.ResourceString("Time")
        </td>
        <td>
            @Html.ResourceString("Lesson")
        </td>
        <td>
            @Html.ResourceString("Room")
        </td>
        <td>
            @Html.ResourceString("Teacher")
        </td>
    </tr>
</table>
    @for (int i = 0; i < Model.Weeks.Count; i++)
    {
        <div class="spoiler-link">@Html.ResourceString("Week") @(i + 1)</div>

    <table class="spoiler-body">
        @for (int q = 0; q < Model.Weeks[i].Days.Count; q++)
        {
            <thead class="spoiler-link">
                <tr>
                    <td>
                        @switch (q)
                        {
                            case 0:
                                @Html.ResourceString("Monday")
                                break;
                            case 1:
                                @Html.ResourceString("Tuesday")
                                break;
                            case 2:
                                @Html.ResourceString("Wednesday")
                                break;
                            case 3:
                                @Html.ResourceString("Thursday")
                                break;
                            case 4:
                                @Html.ResourceString("Friday")
                                break;
                            case 5:
                                {
                                    @Html.ResourceString("Saturday")
                                    break;
                                }
                            case 6:
                                {
                                    @Html.ResourceString("Sunday")
                                    break;
                                }
                        }
                    </td>
                </tr>
            </thead>
            <tbody class="spoiler-body">
                @for (int j = 0; j < Model.Weeks[i].Days[q].Lessons.Count; j++)
                {
                    <tr>
                        <td>@Html.EditorFor(m => m.Weeks[i].Days[q].Lessons[j].Start)<span> - </span>@Html.EditorFor(m => m.Weeks[i].Days[q].Lessons[j].End)</td>
                        <td>@Html.EditorFor(m => m.Weeks[i].Days[q].Lessons[j].Name)</td>
                        <td>@Html.EditorFor(m => m.Weeks[i].Days[q].Lessons[j].Room)</td>
                        <td><i>@Html.EditorFor(m => m.Weeks[i].Days[q].Lessons[j].Teacher)</i></td>
                        @Html.HiddenFor(m => m.Weeks[i].Days[q].Lessons[j].Number)
                    </tr>
                }
            </tbody>
        }
    </table>
    }