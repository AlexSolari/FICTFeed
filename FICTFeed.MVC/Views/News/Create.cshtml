@model FICTFeed.MVC.Models.PageViews.News.NewsItemCreatePageView

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.ResourceString("NewsItemCreate")</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal news-creation">
        <hr />
        @Html.ValidationSummary()
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ResourceLabelFor(m => m.NewNewsItem.Title)
                @Html.EditorFor(m => m.NewNewsItem.Title)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ResourceLabelFor(m => m.NewNewsItem.ShortDescription)
                @Html.EditorFor(m => m.NewNewsItem.ShortDescription)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ResourceLabelFor(m => m.NewNewsItem.Description)
                @Html.EditorFor(m => m.NewNewsItem.Description)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ResourceLabelFor(m => m.NewNewsItem.GroupId)
                @Html.DropDownListFor(m => m.NewNewsItem.GroupId,
                new SelectList(Model.GroupIds,
                               "Value", "Key",
                               Model.GroupIds.First().Key))
            </div>
        </div>      
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Html.ResourceString("Create")" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
